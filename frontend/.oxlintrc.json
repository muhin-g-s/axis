{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "globals": {
    "__dirname": "readonly",
    "process": "readonly",
    "require": "readonly",
    "module": "readonly",
    "exports": "readonly",
    "global": "readonly"
  },
  "settings": {
    "react": {
      "version": "detect",
      "pragma": "React",
      "fragmentPragma": "Fragment"
    }
  },
  "plugins": [
    "typescript",
    "unicorn",
    "oxc",
    "react",
    "react-perf",
    "jsx-a11y",
    "import",
    "jest",
    "vitest"
  ],
  "rules": {
    // Preact/React specific rules
    "react/react-in-jsx-scope": "off", // Not needed for Preact with automatic JSX runtime
    "react/jsx-uses-react": "off", // Not needed for Preact with automatic JSX runtime
    "react/jsx-key": "error",
    "react/jsx-no-comment-textnodes": "error",
    "react/jsx-no-duplicate-props": "error",
    "react/jsx-no-target-blank": "error",
    "react/jsx-no-undef": "error",
    "react/no-children-prop": "error",
    "react/no-danger-with-children": "error",
    "react/no-deprecated": "error",
    "react/no-direct-mutation-state": "error",
    "react/no-find-dom-node": "error",
    "react/no-is-mounted": "error",
    "react/no-render-return-value": "error",
    "react/no-string-refs": "error",
    "react/no-unescaped-entities": "error",
    "react/no-unknown-property": "error",
    "react/require-render-return": "error",
    "react/jsx-no-useless-fragment": "warn",
    "react/self-closing-comp": "error",
    "react/jsx-fragments": "warn",
    
    // Preact-specific performance rules
    "react-perf/jsx-no-new-array-as-prop": "warn",
    "react-perf/jsx-no-new-function-as-prop": "warn",
    "react-perf/jsx-no-new-object-as-prop": "warn",

    // Accessibility rules
    "jsx-a11y/alt-text": "error",
    "jsx-a11y/anchor-has-content": "error",
    "jsx-a11y/anchor-is-valid": "error",
    "jsx-a11y/aria-activedescendant-has-tabindex": "warn",
    "jsx-a11y/aria-props": "error",
    "jsx-a11y/aria-proptypes": "error",
    "jsx-a11y/aria-role": "error",
    "jsx-a11y/aria-unsupported-elements": "error",
    "jsx-a11y/heading-has-content": "warn",
    "jsx-a11y/iframe-has-title": "error",
    "jsx-a11y/img-redundant-alt": "warn",
    "jsx-a11y/no-access-key": "warn",
    "jsx-a11y/no-distracting-elements": "error",
    "jsx-a11y/no-interactive-element-to-noninteractive-role": "error",
    "jsx-a11y/no-noninteractive-element-interactions": "error",
    "jsx-a11y/no-noninteractive-element-to-interactive-role": "error",
    "jsx-a11y/no-redundant-roles": "warn",
    "jsx-a11y/role-has-required-aria-props": "error",
    "jsx-a11y/role-supports-aria-props": "error",
    "jsx-a11y/scope": "error",
    "jsx-a11y/tabindex-no-positive": "warn",

    // TypeScript rules
    "typescript/array-type": ["error", { "default": "array-simple" }],
    "typescript/prefer-const": "error",
    "typescript/prefer-readonly": "error",
    "typescript/no-unused-vars": "error",
    "typescript/no-explicit-any": "warn",
    "typescript/no-non-null-assertion": "warn",
    "typescript/no-parameter-properties": "off",
    "typescript/no-require-imports": "off",
    "typescript/triple-slash-reference": "off",
    "typescript/prefer-namespace-keyword": "off",
    "typescript/no-empty-interface": "off",
    "typescript/no-use-before-define": "off",
    "typescript/prefer-for-of": "error",
    "typescript/prefer-function-type": "error",
    "typescript/no-array-constructor": "error",
    "typescript/no-empty-function": "warn",
    "typescript/no-inferrable-types": "warn",
    "typescript/no-misused-new": "error",
    "typescript/no-this-alias": "warn",
    "typescript/no-unnecessary-qualifier": "error",
    "typescript/no-unnecessary-type-arguments": "error",
    "typescript/no-useless-constructor": "error",
    "typescript/no-var-requires": "off",
    "typescript/promise-function-async": "off",
    "typescript/strict-boolean-expressions": "off",
    "typescript/prefer-optional-chain": "error",
    "typescript/no-duplicate-enum-values": "error",
    "typescript/no-extra-non-null-assertion": "error",
    "typescript/no-meaningless-void-operator": "error",
    "typescript/no-non-null-asserted-optional-chain": "error",
    "typescript/prefer-enum-initializers": "warn",
    "typescript/prefer-literal-enum-member": "error",
    "typescript/switch-exhaustiveness-check": "error",
    "typescript/prefer-ts-expect-error": "error",
    "typescript/no-confusing-void-expression": "off",
    "typescript/no-dynamic-delete": "warn",
    "typescript/no-extraneous-class": "error",
    "typescript/no-invalid-void-type": "error",
    "typescript/no-misused-promises": "warn",
    "typescript/no-restricted-generics": "warn",
    "typescript/no-unsafe-argument": "off",
    "typescript/no-unsafe-assignment": "off",
    "typescript/no-unsafe-call": "off",
    "typescript/no-unsafe-member-access": "off",
    "typescript/no-unsafe-return": "off",
    "typescript/require-await": "warn",
    "typescript/restrict-plus-operands": "off",
    "typescript/restrict-template-expressions": "off",
    "typescript/unified-signatures": "warn",
    "typescript/no-import-type-side-effects": "error",

    // Correctness rules (default)
    "no-debugger": "error",
    "no-dupe-keys": "error",
    "no-dupe-else-if": "error",
    "no-duplicate-case": "error",
    "no-compare-neg-zero": "error",
    "no-cond-assign": "error",
    "no-constant-condition": "error",
    "no-control-regex": "error",
    "no-empty-character-class": "error",
    "no-empty": "error",
    "no-ex-assign": "error",
    "no-extra-boolean-cast": "error",
    "no-func-assign": "error",
    "no-import-assign": "error",
    "no-invalid-regexp": "error",
    "no-irregular-whitespace": "error",
    "no-misleading-character-class": "error",
    "no-prototype-builtins": "error",
    "no-setter-return": "error",
    "no-sparse-arrays": "error",
    "no-template-curly-in-string": "error",
    "no-unreachable": "error",
    "no-unsafe-finally": "error",
    "no-unsafe-negation": "error",
    "use-isnan": "error",
    "valid-typeof": "error",
    "no-new-native-nonconstructor": "error",

    // Suspicious rules
    "no-array-constructor": "error",
    "no-async-promise-executor": "error",
    "no-await-in-loop": "warn",
    "no-class-assign": "error",
    "no-console": "warn",
    "no-constructor-return": "error",
    "no-duplicate-imports": "warn",
    "no-new-symbol": "error",
    "no-obj-calls": "error",
    "default-case": "error",
    "eqeqeq": "error",
    "grouped-accessor-pairs": "error",
    "logical-assignment-operators": "warn",
    "no-bitwise": "warn",
    "no-caller": "error",
    "no-case-declarations": "error",
    "no-delete-var": "error",
    "no-div-regex": "error",
    "no-else-return": "warn",
    "no-empty-pattern": "error",
    "no-eq-null": "error",
    "no-eval": "error",
    "no-extend-native": "error",
    "no-extra-bind": "error",
    "no-extra-label": "error",
    "no-fallthrough": "error",
    "no-global-assign": "error",
    "no-implicit-coercion": "warn",
    "no-implicit-globals": "error",
    "no-implied-eval": "error",
    "no-invalid-this": "error",
    "no-iterator": "error",
    "no-labels": "error",
    "no-lone-blocks": "error",
    "no-magic-numbers": "off",
    "no-multi-spaces": "warn",
    "no-multi-str": "error",
    "no-new": "warn",
    "no-new-func": "error",
    "no-new-wrappers": "error",
    "no-octal": "error",
    "no-octal-escape": "error",
    "no-proto": "error",
    "no-redeclare": "error",
    "no-regex-spaces": "error",
    "no-return-assign": "error",
    "no-return-await": "warn",
    "no-script-url": "error",
    "no-self-assign": "error",
    "no-self-compare": "error",
    "no-sequences": "error",
    "no-throw-literal": "error",
    "prefer-promise-reject-errors": "error",
    "no-unmodified-loop-condition": "warn",
    "no-unneeded-ternary": "error",
    "no-unused-expressions": "error",
    "no-unused-labels": "error",
    "no-useless-call": "warn",
    "no-useless-catch": "error",
    "no-useless-concat": "warn",
    "no-useless-escape": "error",
    "no-useless-return": "warn",
    "no-void": "off",
    "no-warning-comments": "off",
    "no-with": "error",
    "prefer-named-capture-group": "off",
    "prefer-regex-literals": "error",
    "radix": "error",
    "require-await": "warn",
    "require-unicode-regexp": "off",
    "vars-on-top": "off",
    "wrap-iife": "error",
    "yoda": "warn",

    // Style rules
    "array-bracket-spacing": "warn",
    "block-spacing": "warn",
    "brace-style": "warn",
    "comma-dangle": ["warn", "always-multiline"],
    "comma-spacing": "warn",
    "comma-style": "warn",
    "computed-property-spacing": "warn",
    "eol-last": "warn",
    "func-call-spacing": "warn",
    "indent": ["warn", 2],
    "key-spacing": "warn",
    "keyword-spacing": "warn",
    "linebreak-style": ["warn", "unix"],
    "lines-between-class-members": ["warn", "always", { "exceptAfterSingleLine": true }],
    "object-curly-spacing": ["warn", "always"],
    "prefer-const": "error",
    "prefer-template": "warn",
    "quotes": ["warn", "single"],
    "semi": ["warn", "never"],
    "space-before-blocks": "warn",
    "space-before-function-paren": "warn",
    "space-in-parens": "warn",
    "space-infix-ops": "warn",
    "space-unary-ops": "warn",
    "spaced-comment": "warn",
    "switch-colon-spacing": "warn",
    "template-curly-spacing": "warn",
    "template-tag-spacing": "warn",
    "unicode-bom": "warn",
    "arrow-spacing": "warn",
    "generator-star-spacing": "warn",
    "rest-spread-spacing": "warn",
    "jsx-quotes": "warn",
    "function-call-argument-newline": ["warn", "consistent"],
    "function-paren-newline": ["warn", "multiline-arguments"],
    "max-len": ["warn", { "code": 120 }],
    "prefer-exponentiation-operator": "warn",
    "prefer-arrow-callback": "warn",
    "prefer-rest-params": "error",
    "prefer-spread": "warn",
    "prefer-object-has-own": "error",

    // Import rules
    "import/no-cycle": "error",
    "import/no-self-import": "error",
    "import/no-useless-path-segments": "warn",
    "import/export": "error",
    "import/no-named-as-default": "warn",
    "import/no-named-as-default-member": "warn",
    "import/no-unused-modules": "warn",
    "import/no-deprecated": "warn",
    "import/first": "error",
    "import/newline-after-import": "warn",
    "import/no-duplicates": "error",
    "import/no-absolute-path": "off",
    "import/no-internal-modules": "off",
    "import/no-relative-packages": "off",
    "import/no-relative-parent-imports": "off",
    "import/no-restricted-paths": "off",
    "import/no-unassigned-import": "off",
    "import/no-webpack-loader-syntax": "error",

    // Jest/Vitest testing rules (if using tests)
    "jest/expect-expect": "off",
    "jest/no-identical-title": "error",
    "jest/valid-expect": "error",
    "vitest/expect-expect": "off",
    "vitest/no-identical-title": "error",
    "vitest/valid-expect": "error"
  }
}